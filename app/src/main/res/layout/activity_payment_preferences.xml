<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentPreferencesActivity">

    <TextView
        android:id="@+id/textViewPaymentPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:text="Payment Preferences"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPaymentPreferences">

        <Button
            android:id="@+id/addPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Payment Method" />

        <Button
            android:id="@+id/deletePaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Payment Method" />

        <Button
            android:id="@+id/viewPaymentMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Payment Methods" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
